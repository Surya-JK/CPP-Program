#include <iostream>
using namespace std;
int fact(int n) {
    if (n == 0)
        return 1;
    return n * fact(n - 1);
}
int main() {
    int number;
    cout << "Enter a number to find its factorial: ";
    cin >> number;

    if (number < 0) {
        cout << "Factorial is not defined for negative numbers." << endl;
    } else {
        int result = fact(number);
        cout << "Factorial of " << number << " is: " << result << endl;
    }

    return 0;
}
